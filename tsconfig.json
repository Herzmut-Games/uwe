{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "lib": ["es6", "dom", "scripthost"],
    "sourceMap": true,
    "noEmit": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "incremental": true
  },
  "exclude": ["node_modules"]
}
