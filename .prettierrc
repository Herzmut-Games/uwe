{
  "printWidth": 80,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": true,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "htmlWhitespaceSensitivity": "strict",
  "overrides": [
    {
      "files": ["*.json", ".prettierrc", ".gitlab-ci.yml"],
      "options": {
        "tabWidth": 2
      }
    }
  ]
}
